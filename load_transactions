import pandas as pd

def load_chase(filename,periods):

    ### Data Intake

    df_list = []

    for p in periods:
        p = p.replace("/", ".")
        df = pd.read_csv(fr'/Users/mattray/Desktop/vscode_projects/joint_app/data_intake/inputs/{filename}_{p}.csv')
        df_list.append(df)

        # If no files were found, return an empty DataFrame
    if not df_list:
        print("No files were located")
        return pd.DataFrame()

    combined = pd.concat(df_list, ignore_index=True)

    
    return combined





def load_sofi(filename,periods):

    ### Data Intake

    df_list = []

    for p in periods:
        p = p.replace("/", ".")
        df = pd.read_csv(fr'/Users/mattray/Desktop/vscode_projects/joint_app/data_intake/inputs/{filename}_{p}.csv')
        df_list.append(df)

        # If no files were found, return an empty DataFrame
    if not df_list:
        print("No files were located")
        return pd.DataFrame()

    combined = pd.concat(df_list, ignore_index=True)


    return combined
